{
  "name": "privjob-backend",
  "version": "1.0.0",
  "description": "PrivJob Backend API - Privacy-first job platform with ZK proofs",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc || true",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:debug": "tsx watch --inspect src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit || true",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run type-check",
    "postinstall": "npm run build",
    "indexer": "tsx src/workers/indexer.ts",
    "compile-contracts": "compactc src/contracts/application.compact dist/contracts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "fastify": "^4.24.3",
    "redis": "^4.6.12",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "playwright": "^1.40.1",
    "tsx": "^4.6.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@types/jsonwebtoken": "^9.0.6"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "privacy",
    "zero-knowledge",
    "jobs",
    "midnight-network",
    "fastify",
    "supabase"
  ],
  "author": "PrivJob Team",
  "license": "Apache-2.0"
}
